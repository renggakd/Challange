<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".dialogfragment.CustomDialogFragment"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pixelated"
        android:textSize="@dimen/_20ssp"
        android:text="@string/text_game_result_dialog"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sport"
        android:gravity="center"
        android:maxLines="2"
        tools:text="@string/text_player_dialog"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tv_result"
        app:layout_constraintStart_toStartOf="@id/tv_result"
        app:layout_constraintTop_toBottomOf="@id/tv_result" />


    <Button
        android:id="@+id/btn_replay"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:backgroundTint="#717170"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:text="@string/text_play_again_dialog"
        app:layout_constraintLeft_toLeftOf="@id/tv_winner"
        app:layout_constraintRight_toRightOf="@id/tv_winner"
        app:layout_constraintTop_toBottomOf="@id/tv_winner" />

    <Button
        android:id="@+id/btn_return"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_width="200dp"
        android:backgroundTint="#717170"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:text="@string/text_back_to_menu_dialog"
        app:layout_constraintLeft_toLeftOf="@id/btn_replay"
        app:layout_constraintRight_toRightOf="@id/btn_replay"
        app:layout_constraintTop_toBottomOf="@id/btn_replay" />




</androidx.constraintlayout.widget.ConstraintLayout>
